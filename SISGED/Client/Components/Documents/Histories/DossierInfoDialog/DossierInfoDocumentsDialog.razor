
<MudDialog>
    <TitleContent>
        <MudText Typo="Typo.h6">
            <MudIcon Icon="@Icons.Material.Filled.CompareArrows" Class="mr-3 mb-n1" />
            Documentos de Expediente
        </MudText>
    </TitleContent>
    <DialogContent>
        <MudContainer Style="max-height: 500px; overflow-y: scroll">
            <MudTimeline TimelineOrientation="TimelineOrientation.Vertical" TimelinePosition="TimelinePosition.Alternate" Reverse="false">
                @foreach (var document in Documents)
                {
                    <MudTimelineItem Color="Color.Success" Variant="Variant.Filled">
                        <ItemContent>
                            <DocumentInfo Document="document" @key="document" DocumentVersionHistoryInfo="ShowDocumentVersionHistoryAsync"
                                      DocumentProcessHistoryInfo="ShowDocumentProcessHistoryAsync" DocumentVisualization="ShowDocumentInfoAsync"></DocumentInfo>
                        </ItemContent>
                        <ItemOpposite>
                            <MudText Color="Color.Success">@document.CreationDate</MudText>
                        </ItemOpposite>
                    </MudTimelineItem>
                }
            </MudTimeline>
        </MudContainer>
    </DialogContent>
    <DialogActions>
        <MudButton OnClick="Cancel">Cerrar</MudButton>
    </DialogActions>
</MudDialog>
