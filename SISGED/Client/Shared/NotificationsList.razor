<link rel="stylesheet" href="/css/shared/notifications.css" />
<MudCard Elevation="0" Class="notifications-card">
    <MudCardHeader>
        <MudText Typo="Typo.h6">Notificaciones</MudText>
    </MudCardHeader>
    <MudCardContent>
        @if(notifications is null)
        {
            <GenericToolLoader Body="Cargando las notificaciones"></GenericToolLoader>
        }
        else
        {
            @foreach (var notification in notifications)
            {
                <Notification NotificationInfo="notification" NotificationState="@GetNotificationState(notification.Seen)" NotificationUpdate="UpdateNotification"
                      @key="notification"></Notification>
            }
        }
    </MudCardContent>
</MudCard>

